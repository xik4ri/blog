<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="319dp"
            android:layout_height="61dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/contrasenia"
            android:layout_marginEnd="101dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="101dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:hint="contrasenia"
            app:layout_constraintVertical_bias="0.54"/>
    <EditText
            android:layout_width="319dp"
            android:layout_height="61dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/usuario"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="101dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.426"
            android:hint="usuario" app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:text="iniciar sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/login"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="160dp" app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.732" app:rippleColor="#0B0202" android:textColorLink="#00FFFFFF"/>
    <Button
            android:text="registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/BotonRegistrarse"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            android:layout_marginEnd="160dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.828"/>
    <ImageView
            android:layout_width="138dp"
            android:layout_height="123dp" app:srcCompat="@drawable/logo" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="137dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="136dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.156" tools:srcCompat="@drawable/logo"/>
</androidx.constraintlayout.widget.ConstraintLayout>