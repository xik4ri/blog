<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Busqueda">

    <EditText
            android:layout_width="413dp"
            android:layout_height="79dp"
            android:inputType="text"
            android:text="buscar"
            android:ems="10"
            android:id="@+id/buscador" tools:layout_editor_absoluteY="-2dp" tools:layout_editor_absoluteX="0dp"/>
    <Button
            android:text="Buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buscar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="@null"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.112"/>
    <ScrollView
            android:layout_width="409dp"
            android:layout_height="590dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buscarPost">
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>